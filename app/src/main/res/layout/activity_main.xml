<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:keepScreenOn="true"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/EditTextEmission1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Emission"
        android:lines="1" >
    </EditText>
    <EditText
        android:id="@+id/EditTextEmission"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Emission"
        android:lines="1" >
    </EditText>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:textSize="40dp"
        android:text="TextView" />

    <Button
    android:id="@+id/button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="发送" />

    <Button
        android:id="@+id/buttonhide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="隐藏" />

    <Button
        android:id="@+id/buttonshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示" />

    <Button
        android:id="@+id/buttontime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置时间" />

    <Button
        android:id="@+id/buttontime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置时间2" />

    <Button
        android:id="@+id/buttonpath1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="getSdCardPath" />

    <Button
        android:id="@+id/buttonpath2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="getExtSdCardPath" />

    <Button
        android:id="@+id/buttonpath3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="getUSBPath" />
</LinearLayout>